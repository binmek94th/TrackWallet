@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        border: solid 2px black;
    }
    
    main {
        background-color: #fff;
        padding: 40px;
        margin: -50px auto 20px;
        border-radius: 10px;
        width: 50%; /* Adjusted width to make it full-width */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        height: 94%;
    }
    

    h2 {
        font-size: 22px;
        font-weight: normal;
        color: #343a40;
    }
    
    content {
        width: 40%; /* Adjusted width to make it narrower */
        margin-left: 25px;
        margin-top: -50px;
    }
    
    form {
        margin-top: 10px;
    }
    
    .form-floating {
        margin-bottom: 15px;
        width: 80%;
    }
    
    .form-floating input,
    .form-floating select {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        margin-top: 5px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 16px;
    }
    
    .form-floating label {
        display: block;
        font-size: 16px;
        color: #495057;
        padding-bottom: 7px;
    }
    
    .input-validation {
        color: #dc3545;
        font-size: 14px;
        margin-top: 5px;
    }
    
    button {
        display: flex;
        justify-content: flex-end;
    }
    
  button {
        background-color: #8cd35d;
        color: #fff;
        padding: 10px 20px;
        margin-top: 40px;
        font-size: 18px;
        border: none;
        border-radius: 25px;
        cursor: pointer;
    }
    
    .form-floating input:hover,
    .form-floating select:hover {
        border-color: #8cd35d;
    }
    
 button:hover {
        background-color: #a2d780;
    }
   
    
    .dropdown-element {
        width: 80%;
        padding: 10px;
        box-sizing: border-box;
        margin-top: 5px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 16px;
    }

    .text-danger {
        padding-top: 10px;
        font-size: 16px;
        color: red;
    }
    span {
        margin-top: 10px;
    }

</style>
        <h2>Create a new account.</h2>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.FirstName">First Name</label>
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="First Name"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.LastName">Last Name</label>
                <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Last Name"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="Input.DefaultCurrency" class="dropdown-element">
                    <option disabled selected>Select Default Currency</option>
                    <option>ETB </option>
                    <option>USD </option>
                    <option>Euro </option>
                    <option>Pound </option>
                </select>
                <span asp-validation-for="Input.DefaultCurrency" class="input-validation"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
