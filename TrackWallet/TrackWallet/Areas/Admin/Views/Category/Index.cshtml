@model List<Category>

<div class="MainBoard">
    <h3>Category</h3>
    <div class="displaySpace">
        <div class="Bcontainer">
            <button id="incomeButton">Income</button>
            <button id="expenseButton">Expense</button>
        </div>

        @foreach (var obj in Model.OrderBy(u => u.Name))
        {
            <div class="category @obj.CategoryType.ToLower()">
                <div class="elements">
                    <img src="wwwroot/Images/money_6811816.png" width="50px" />
                    <p>@obj.Name</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .MainBoard {
        display: flex;
        flex-direction: column;
    }

    h3 {
        margin-bottom: 25px;
    }

    .displaySpace {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .Bcontainer {
        background-color: #6ce121;
        width: 300px;
        height: 50px;
        border-radius: 15px;
        display: flex;
        justify-content: space-around;
        margin-bottom: 20px;
        align-items: center;
        text-align: center;
    }

    .category {
        margin-top: 20px;
        border-radius: 25px;
        font-size: 25px;
        height: 60px;
        width: 300px;
        background-color: #c2d7be;
    }

    button {
        width: 100px;
        height: 40px;
        background-color: #6ce121;
        border: none;
        border-radius: 10px;
        font-size: 15px;
    }

    .elements {
        display: flex;
    }

    button:active {
        background-color: #45a049;
    }

    /* Change color when the button is focused (tabbed into) */
    button:focus {
        outline: none;
        background-color: #45a049;
    }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Initially hide all categories
        $(".category.expense").hide();
        $(".category.income").show();

        // Show income categories when the "Income" button is clicked
        $("#incomeButton").on("click", function () {
            $(".category.income").show();
            $(".category.expense").hide();
        });

        // Show expense categories when the "Expense" button is clicked
        $("#expenseButton").on("click", function () {
            $(".category.income").hide();
            $(".category.expense").show();
        });
    });
</script>
