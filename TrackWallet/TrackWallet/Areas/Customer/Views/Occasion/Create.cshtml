@model OccasionVM


<!DOCTYPE html>

<html>
<head>
    <title>Create Budget</title>
    <style>
            body {
                font-family: 'Arial', sans-serif;
                margin: 0;
                padding: 0;
                border: solid 2px black;
            }
    
            .main {
                background-color: #fff; /* White background for the main content */
                /* Center the main content */
                margin: 20px auto;
                padding: 40px;
                border-radius: 10px;
                width: 140%; /* Adjusted width to make it wider */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
            }
    
            .Back-arrow a {
                text-decoration: none;
                color: #007bff; /* Blue color for the link */
                font-size: 18px;
                margin-bottom: 20px;
                display: block;
            }
    
            h3 {
                margin-bottom: 25px;
                font-size: 22px;
                font-weight: normal;
                color: #343a40; /* Dark gray color for the heading */
            }
            h4{
                font-size: 22px;
                font-weight: normal;
                color: #343a40;
            }
            p{
                color: #343a40;
            }
    
            .content {
                width: 120%; /* Adjusted width to make it wider */
                margin-left: 25px; /* Center the content */
            }
    
            .form {
                margin-top: 10px;
            }
    
            .form-element {
                margin-bottom: 15px;
            }
    
            .input-label {
                display: block;
                font-size: 16px;
                color: #495057; /* Dark gray color for the label */
                padding-bottom: 7px;
            }
    
            .input-element, .dropdown-element, .input-image {
                width: 100%;
                padding: 10px;
                box-sizing: border-box;
                margin-top: 5px;
                border: 1px solid #ced4da; /* Light gray border for input elements */
                border-radius: 5px;
                font-size: 16px;
            }
    
            .input-validation {
                color: #dc3545; /* Red color for validation messages */
                font-size: 14px;
                margin-top: 5px;
            }
      
            .button {
                display: flex;
                justify-content: flex-end;
                margin-right: -150px;
                
            }
            .submit-button button {
                background-color: #8cd35d; /* Green color for the submit button */
                color: #fff; /* White text color for the button */
                padding: 10px 20px;
                margin-top: 40px;
                font-size: 18px;
                border: none;
                border-radius: 25px;
                cursor: pointer;
            }
    
            .input-element:hover,
            .dropdown-element:hover,
            .input-image:hover {
                border-color: #8cd35d; /* Blue border color on hover */
            }
    
            .submit-button button:hover {
                background-color: #a2d780; /* Gray background color on button hover */
            }
    
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }   
            input[type="date"] {
                width: 200px;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
                font-size: 14px;
            }
            
            /* Apply styles when the date input is in focus */
            input[type="date"]:focus {
                outline: none;
                border-color: #8CD35DFF; /* Change to your preferred focus color */
                /*box-shadow: 0 0 5px #8CD35DFF; /* Change to your preferred focus shadow */
            }   
            input[type="date"]:hover {
                outline: none;
                border-color: #8CD35DFF; /* Change to your preferred focus color */
                /*box-shadow: 0 0 5px #8CD35DFF; /* Change to your preferred focus shadow */
            }     
            .hidden{
                display: none;
                }
                
             .toggle-container {
                display: inline-block;
            }
    
            .toggle-switch {
                position: relative;
                display: inline-block;
                width: 45px;
                height: 22px;
            }
    
            .toggle-switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }
    
            .slider {
                position: absolute;
                cursor: pointer;
                border-radius: 20px;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-color: #ccc;
                -webkit-transition: .4s;
                transition: .4s;
            }
    
            .slider:before {
                position: absolute;
                content: "";
                height: 18px;
                width: 18px;
                left: 4px;
                top: 2px;
                border-radius: 20px;
                bottom: 4px;
                background-color: #f8f4f4;
                -webkit-transition: .4s;
                transition: .4s;
            }
    
            input:checked + .slider {
                background-color: #a2d780;
            }
    
            input:checked + .slider:before {
                -webkit-transform: translateX(20px);
                -ms-transform: translateX(20px);
                transform: translateX(20px);
            }
        </style>
</head>
<body>
<h3>Create Occasion</h3>
    <div class="Back-arrow">
        <a asp-action="Index" asp-controller="Budget"><img width="30px" src="@Url.Content("~/Image/Icons/Back.png")"/> </a>
    </div>
<div class="content">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="@Model.Occasion.Id" hidden/>
        <div class="form">
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Occasion.Name">Occasion Name</label>
                <input asp-for="@Model.Occasion.Name" type="text" class="input-element"/>
                <span asp-validation-for="@Model.Occasion.Name" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Occasion.Description">Description</label>
                <input asp-for="@Model.Occasion.Description" type="text" class="input-element"/>
                <span asp-validation-for="@Model.Occasion.Description" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Occasion.StartDate">Start Date</label>
                <input class="date" asp-for="@Model.Occasion.StartDate" type="date"/>
                <span asp-validation-for="@Model.Occasion.StartDate" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Occasion.EndDate">End Date</label>
                <input class="date" asp-for="@Model.Occasion.EndDate" type="date"/>
                <span asp-validation-for="@Model.Occasion.EndDate" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Occasion.BudgetId">Budget</label>
                <select asp-for="@Model.Occasion.BudgetId" class="dropdown-element" asp-items="@Model.BudgetList">
                    <option disabled selected>Select Budget</option>
                </select>
                <span asp-validation-for="@Model.Occasion.BudgetId" class="input-validation"></span>
            </div>
            <p>*Toggle the button below to create new budget</p>
            
            <div class="toggle-container">
                <label class="toggle-switch">
                    <input type="checkbox" id="toggleButton">
                    <span class="slider"></span>
                </label>
            </div>
            
            <div class="hidden" id="content">
                <h4>Adding Budget</h4>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Budget.Amount">Budget Amount</label>
                    <input class="date" asp-for="@Model.Budget.Amount" type="text"/>
                    <span asp-validation-for="@Model.Budget.Amount" class="input-validation"></span>
                </div>
            </div>

            
            <div class="button">
                <div class="submit-button">
                    <button asp-action="CreatePost" asp-controller="Occasion" type="submit">Create</button>
                </div>
            </div>
        </div>
    </form>
</div>
</body>
</html>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script>
        var toggleButton = document.getElementById('toggleButton');
        var content = document.getElementById('content');
    
        toggleButton.addEventListener('change', function() {
            content.classList.toggle('hidden', !toggleButton.checked);
        });
</script>