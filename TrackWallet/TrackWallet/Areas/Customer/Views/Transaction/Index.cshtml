@model List<Transaction>
<style>
    .add {
        width: 50px;
        height: 50px;
        border-radius: 50px;
        text-align: center;
        margin-left: 10px; /* Add margin to separate from wallet contents */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .add img {
        padding: 10px;
        border-radius: 50%;
        background-color: gray;
    }

    /* Style for the text inside the box */
    .Content {
        width: 200px;
        height: 140px;
        padding: 20px; /* Padding inside the box */
        margin: 10px;
        border-radius: 20px; /* Border radius for rounded corners */
        background-color: #EFF5E9; /* Background color of the box */
        overflow: hidden;
        position: relative; /* Set position relative for absolute positioning */
    }

    .card-container {
        display: flex;
        white-space: nowrap; /* Prevent wrapping */
        margin-right: -10px; /* Adjust the margin as needed */
    }

    /* Style for the bottom text */
    .bottom-text {
        position: absolute;
        bottom: 5px;
        left: 20px;
    }

    .balance {
        position: absolute;
        bottom: 20px;
        left: 20px;
        font-size: 22px;
        font-weight: 500;
    }

    .modify-link {
        position: absolute;
        top: 15px;
        right: 5px;
        width: 50px; /* Adjust the width and height as needed */
        height: 20px;
    }
    .container {
        margin-right: 10px;
        padding-right: 10px;
    }
    .add-btn {
        position: fixed;
        bottom: 50px;
        right: 150px;
        width: 50px;
        height: 50px;
        border-radius: 50px;
        background-color: #9fe870;
        text-align: center;
    }
    .add-btn img{
        padding: 13px;
    }
    .t-box{
        height: 20px;   
        width: 20px;
        padding: 5px;
        background-color: rgba(204,202,202,0.82);
        border-radius: 50%;
    }
    .transaction{
        width: 900px;
        margin-top: 20px;
        }
    .transaction-elements{
        display: flex;
        background-color: #EFF5E9;
        height: 40px;
        border-radius: 15px;
        width: 90%;
        margin-bottom: 10px;
        padding: 10px;
    }   
    .transaction-elements P{
        margin-right: 5%;
        width: 150px;
    }
    .t-box{
        margin-right: 5%;
        margin-top: 5px;
    }
    .modify-link1 a :hover {
        background-color: #c6dcb4;
        width: 25px;
        height: 25px;
        border-radius: 50%;
        
    }
    .modify-link1{
        margin-left: 30px;
        margin-top: 10px;
    }
    
    .delete img:hover {
        background-color: #e34242;
    }
           
</style>


<div class="MainBoard">
    <h3>Transaction</h3>

    <div class="displaySpace">
        <hr/>
 <div class="transaction">
        @foreach (var tran in Model)
        {
            <div class="transaction-elements">
                <div class="t-box">
                    @if (tran.Direction == "Income")
                    {
                        <div class="direction">
                            <img width="20px" height="20px" src="@Url.Content(("~/Image/Icons/right.png"))"/>
                        </div>
                    }
                    else
                    {
                        <div class="direction">
                            <img width="20px" height="20px" src="@Url.Content(("~/Image/Icons/left.png"))"/>
                        </div>
                    }
                </div>
                <p>Amount: @tran.Amount</p>
                <p>Wallet: @tran.Wallet.Name</p>
                @if (tran.Occasion == null) ;
                else
                {
                    <p>Occasion: @tran.Occasion.Name</p>
                }
                @if (tran.RecurringTransaction == null) ;
                else
                {
                    <p>Occasion: @tran.RecurringTransaction.Name</p>
                }
                <p>Date: @tran.date.ToShortDateString()</p>
                <div class="modify-link1">
                    <a asp-controller="Transaction" asp-action="Edit" asp-route-id="@tran.Id"><img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/></a>
                    <a asp-controller="Transaction" class="delete" asp-action="Delete" asp-route-id="@tran.Id"><img width="25px" src="@Url.Content("~/Image/Icons/Delete.png")"/></a>
                </div>
            </div>
        }
    </div>

                <a asp-controller="Transaction" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
    
</div>

