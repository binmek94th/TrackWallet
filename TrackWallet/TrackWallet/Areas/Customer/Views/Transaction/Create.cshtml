@model TransactionVM


<!DOCTYPE html>

<html>
<head>
    <title>Create Transaction</title>
    <style>
            body {
                font-family: 'Arial', sans-serif;
                margin: 0;
                padding: 0;
                border: solid 2px black;
            }
    
            .main {
                background-color: #fff; /* White background for the main content */
                /* Center the main content */
                margin: 20px auto;
                padding: 40px;
                border-radius: 10px;
                width: 140%; /* Adjusted width to make it wider */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
            }
    
            .Back-arrow a {
                text-decoration: none;
                color: #007bff; /* Blue color for the link */
                font-size: 18px;
                margin-bottom: 20px;
                display: block;
            }
    
            h3 {
                margin-bottom: 25px;
                font-size: 22px;
                font-weight: normal;
                color: #343a40; /* Dark gray color for the heading */
            }
    
            .content {
                width: 120%; /* Adjusted width to make it wider */
                margin-left: 25px; /* Center the content */
            }
    
            .form {
                width: 80%;
                margin-top: 10px;
            }
    
            .form-element {
                margin-bottom: 15px;
            }
    
            .input-label {
                display: block;
                font-size: 16px;
                color: #495057; /* Dark gray color for the label */
                padding-bottom: 7px;
            }
    
            .input-element, .dropdown-element, .input-image {
                width: 100%;
                padding: 10px;
                box-sizing: border-box;
                margin-top: 5px;
                border: 1px solid #ced4da; /* Light gray border for input elements */
                border-radius: 5px;
                font-size: 16px;
            }
    
            .input-validation {
                color: #dc3545; /* Red color for validation messages */
                font-size: 14px;
                margin-top: 5px;
            }
      
            .button {
                display: flex;
                justify-content: flex-end;
                margin-right: -150px;
                
            }
            .submit-button button {
                background-color: #8cd35d; /* Green color for the submit button */
                color: #fff; /* White text color for the button */
                padding: 10px 20px;
                margin-top: 40px;
                margin-bottom: 80px;
                font-size: 18px;
                border: none;
                border-radius: 25px;
                cursor: pointer;
            }
    
            .input-element:hover,
            .dropdown-element:hover,
            .input-image:hover {
                border-color: #8cd35d; /* Blue border color on hover */
            }
    
            .submit-button button:hover {
                background-color: #a2d780; /* Gray background color on button hover */
            }
  

    
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }     
            .IE {
                width: 130px;
                height: 35px;
                margin-left: 13px;
                background-color: #9FE870;
                border: none;
                border-radius: 10px;
                text-align: center;
                font-size: 18px;
            }
              .IE.active-button {
                    background-color: #B9EE97;
                }
            .Bcontainer {
                background-color: #9FE870;
                width: 300px;
                height: 45px;
                border-radius: 15px;
                display: flex;
                margin-left: 100px;
                margin-bottom: 20px;
                align-items: center;
                text-align: center;
            }
            button:active {
                background-color: #B9EE97;
            }
        
            /* Change color when the button is focused (tabbed into) */
            button:focus {
                outline: none;
                background-color: #B9EE97;
            } 
            #IncomeForm{
                width: 87%;
            }
            .form p{
                width: 500px;
                }
        </style>
</head>
<body>
<h3>Create Transaction</h3>
    <div class="Back-arrow">
        <a asp-action="Index" asp-controller="Budget"><img width="30px" src="@Url.Content("~/Image/Icons/Back.png")"/> </a>
    </div>
<div class="content">
    <div class="Bcontainer">
        <button class="IE" onclick="showForm('IncomeForm', 'income')" id="income">Income</button>
        <button class="IE" onclick="showForm('ExpenseForm', 'expense')" id="expense">Expenses</button>
    </div>
    <div class="form-section" id="IncomeForm">
        <form method="post" enctype="multipart/form-data">
            <h4>Income</h4>
            <input asp-for="Transaction.Direction" value="Income" hidden/>
            <input asp-for="Transaction.Id" hidden/>
            <div class="form">
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.UserSelectedCategoryId">Category</label>
                    <select asp-for="@Model.Transaction.UserSelectedCategoryId" class="dropdown-element" asp-items="@Model.IncomeCatergoryList">
                        <option disabled selected>Select Category</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.UserSelectedCategoryId" class="input-validation"></span>
                    <div class="form-element">
                        <label class="input-label" asp-for="@Model.Transaction.Amount">Amount</label>
                        <input asp-for="@Model.Transaction.Amount" type="text" class="input-element"/>
                        <span asp-validation-for="@Model.Transaction.Amount" class="input-validation"></span>
                    </div>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.WalletId">Wallet</label>
                    <select asp-for="@Model.Transaction.WalletId" class="dropdown-element" asp-items="@Model.WalletList">
                        <option disabled selected>Select funding Wallet</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.WalletId" class="input-validation"></span>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.date">Date</label>
                    <input type="date" asp-for="@Model.Transaction.date" class="dropdown-element"></input>
                    <span asp-validation-for="@Model.Transaction.date" class="input-validation"></span>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.Description">Description</label>
                    <input asp-for="@Model.Transaction.Description" type="text" class="input-element"/>
                    <span asp-validation-for="@Model.Transaction.Description" class="input-validation"></span>
                </div>
                <p>If the transaction is loan repayment select a loan you gave others</p>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.LoanAndDebtId">Loan repayment</label>
                    <select asp-for="@Model.Transaction.LoanAndDebtId" class="dropdown-element" asp-items="@Model.loanList">
                        <option disabled selected>Select Loan</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.LoanAndDebtId" class="input-validation"></span>
                </div>
                <div class="button">
                    <div class="submit-button">
                        <button asp-action="CreatePost" asp-controller="Transaction" type="submit">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="form-section" id="ExpenseForm">
        <h4>Expense</h4>
        <form method="post" enctype="multipart/form-data">
        <input asp-for="@Model.Transaction.Id" hidden/>
        <input asp-for="Transaction.Direction" value="Expense" hidden/>
            <input asp-for="@Model.Transaction.Id" hidden/>
            <div class="form">
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.UserSelectedCategoryId">Category</label>
                    <select asp-for="@Model.Transaction.UserSelectedCategoryId" class="dropdown-element" asp-items="@Model.ExpenseCategoryList">
                        <option disabled selected>Select Category</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.UserSelectedCategoryId" class="input-validation"></span>
                    <div class="form-element">
                        <label class="input-label" asp-for="@Model.Transaction.Amount">Amount</label>
                        <input asp-for="@Model.Transaction.Amount" type="text" class="input-element"/>
                        <span asp-validation-for="@Model.Transaction.Amount" class="input-validation"></span>
                    </div>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.WalletId">Wallet</label>
                    <select asp-for="@Model.Transaction.WalletId" class="dropdown-element" asp-items="@Model.WalletList">
                        <option disabled selected>Select funding Wallet</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.WalletId" class="input-validation"></span>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.date">Date</label>
                    <input type="date" asp-for="@Model.Transaction.date" class="dropdown-element"></input>
                    <span asp-validation-for="@Model.Transaction.date" class="input-validation"></span>
                </div>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.Description">Description</label>
                    <input asp-for="@Model.Transaction.Description" type="text" class="input-element"/>
                    <span asp-validation-for="@Model.Transaction.Description" class="input-validation"></span>
                </div>
                <label>If the transaction is Debt payment select a debt</label>
                <div class="form-element">
                    <label class="input-label" asp-for="@Model.Transaction.LoanAndDebtId">Debt payment</label>
                    <select asp-for="@Model.Transaction.LoanAndDebtId" class="dropdown-element" asp-items="@Model.DebtList">
                        <option disabled selected>Select Debt</option>
                    </select>
                    <span asp-validation-for="@Model.Transaction.LoanAndDebtId" class="input-validation"></span>
                </div>
                
                <div class="button">
                    <div class="submit-button">
                        <button asp-action="CreatePost" asp-controller="Transaction" type="submit">Create</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script>
    window.onload = function () {
        // Show the ExpenseForm section
        showForm('ExpenseForm');

        // Add a specific class to style the Expense button
        var expenseButton = document.getElementById('expense');
        if (expenseButton) {
            expenseButton.classList.add('active-button');
        }
    };

   function showForm(formId, buttonId) {
       // Hide all form sections
       var formSections = document.querySelectorAll('.form-section');
       formSections.forEach(function (section) {
           section.style.display = 'none';
       });
   
       // Show the selected form section
       var selectedForm = document.getElementById(formId);
       if (selectedForm) {
           selectedForm.style.display = 'block';
       }
   
       // Remove the active class from all buttons
       var allButtons = document.querySelectorAll('.IE');
       allButtons.forEach(function (button) {
           button.classList.remove('active-button');
       });
   
       // Add the active class to the clicked button
       var clickedButton = document.getElementById(buttonId);
       if (clickedButton) {
           clickedButton.classList.add('active-button');
       }
    }
</script>

