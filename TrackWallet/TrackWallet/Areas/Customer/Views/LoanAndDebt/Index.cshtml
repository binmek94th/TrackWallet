@model List<LoanAndDebt>


<div class="MainBoard">
    <h3>Loan And Debt</h3>

    <div class="displaySpace">
        <hr/>
        <div class="MainCat">
            <h4>Loan</h4>
            <hr/>
            @foreach (var obj in Model)
            {
                @if (obj.Type == "Loan")
                {
                    <div class="elements">
                        <div class="row-first">
                            <p>Borrowed To: @obj.BorrowerName</p>
                            <p style="width: 200px">Payment Plan: @obj.PaymentOption</p>
                        </div>
                        <p>Amount: @obj.Amount</p>
                        <p style="width: 200px">Start Date: @obj.StartingDate.ToShortDateString()</p>
                        <div class="modify-link">
                            <a asp-controller="LoanAndDebt" asp-action="Edit" asp-route-id="@obj.Id">
                                <img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/>
                                <a asp-controller="LoanAndDebt" asp-route-id="@obj.Id" asp-action="Delete" class="delete">
                                    <img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Delete.png")"/>
                                </a>
                            </a>
                        </div>
                    </div>
                }
            }
            <h4>Debt</h4>
            <hr/>
            @foreach (var obj in Model)
            {
                @if (obj.Type == "Debt")
                {
                    <div class="elements">
                        <div class="row-first">
                            <p>Borrowed From: @obj.BorrowerName</p>
                            <p style="width: 200px">Payment Plan: @obj.PaymentOption</p>
                        </div>
                        <p>Amount: @obj.Amount</p>
                        <p style="width: 200px">Start Date: @obj.StartingDate.ToShortDateString()</p>
                        <div class="modify-link">
                            <a asp-controller="LoanAndDebt" asp-action="Edit" asp-route-id="@obj.Id">
                                <img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/>
                                <a asp-controller="LoanAndDebt" asp-route-id="@obj.Id" asp-action="Delete" class="delete">
                                    <img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Delete.png")"/>
                                </a>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
                <a asp-controller="LoanAndDebt" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
    
</div>

