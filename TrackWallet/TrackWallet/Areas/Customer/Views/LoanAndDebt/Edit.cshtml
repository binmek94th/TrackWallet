@model LoanAndDebt


<!DOCTYPE html>

<html>
<head>
    <title>Create loan or debt</title>
    <style>
            body {
                font-family: 'Arial', sans-serif;
                margin: 0;
                padding: 0;
                border: solid 2px black;
            }
    
            .main {
                background-color: #fff; /* White background for the main content */
                /* Center the main content */
                margin: 20px auto;
                padding: 40px;
                border-radius: 10px;
                width: 140%; /* Adjusted width to make it wider */
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Subtle box shadow */
            }
    
            .Back-arrow a {
                text-decoration: none;
                color: #007bff; /* Blue color for the link */
                font-size: 18px;
                margin-bottom: 20px;
                display: block;
            }
    
            h3 {
                margin-bottom: 25px;
                font-size: 22px;
                font-weight: normal;
                color: #343a40; /* Dark gray color for the heading */
            }
    
            .content {
                width: 120%; /* Adjusted width to make it wider */
                margin-left: 25px; /* Center the content */
            }
    
            .form {
                margin-top: 10px;
            }
    
            .form-element {
                margin-bottom: 15px;
            }
    
            .input-label {
                display: block;
                font-size: 16px;
                color: #495057; /* Dark gray color for the label */
                padding-bottom: 7px;
            }
    
            .input-element, .dropdown-element, .input-image {
                width: 100%;
                padding: 10px;
                box-sizing: border-box;
                margin-top: 5px;
                border: 1px solid #ced4da; /* Light gray border for input elements */
                border-radius: 5px;
                font-size: 16px;
            }
    
            .input-validation {
                color: #dc3545; /* Red color for validation messages */
                font-size: 14px;
                margin-top: 5px;
            }
      
            .button {
                display: flex;
                justify-content: flex-end;
                margin-right: -150px;
                
            }
            .submit-button button {
                background-color: #8cd35d; /* Green color for the submit button */
                color: #fff; /* White text color for the button */
                padding: 10px 20px;
                margin-top: 40px;
                font-size: 18px;
                border: none;
                border-radius: 25px;
                cursor: pointer;
            }
    
            .input-element:hover,
            .dropdown-element:hover,
            .input-image:hover {
                border-color: #8cd35d; /* Blue border color on hover */
            }
    
            .submit-button button:hover {
                background-color: #a2d780; /* Gray background color on button hover */
            }
  

    
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }
            .Back-arrow {
                width: 30px;
                height: 40px;
                border-radius: 50px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50px;
            }      
           
        </style>
</head>
<body>
<h3>Create loan or debt</h3>
    <div class="Back-arrow">
        <a asp-action="Index" asp-controller="LoanAndDebt"><img width="30px" src="@Url.Content("~/Image/Icons/Back.png")"/> </a>
    </div>
<div class="content">
    <form method="post" id="loanForm" class="form-section">
        <input asp-for="@Model.Id" hidden/>
        <div class="form">
            <div class="form-element">
                @if(Model.Type == "Loan")
                {
                <label class="input-label" asp-for="@Model.BorrowerName">Borrower Name</label>
                <input asp-for="@Model.BorrowerName" type="text" class="input-element"/>
                <span asp-validation-for="@Model.BorrowerName" class="input-validation"></span>
                }
                else
                {
                    <label class="input-label" asp-for="@Model.BorrowerName">Borrowed From</label>
                    <input asp-for="@Model.BorrowerName" type="text" class="input-element"/>
                    <span asp-validation-for="@Model.BorrowerName" class="input-validation"></span>
                }
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.Amount">Amount</label>
                <input asp-for="@Model.Amount" type="text" class="input-element"/>
                <span asp-validation-for="@Model.Amount" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.StartingDate">Starting date</label>
                <input asp-for="@Model.StartingDate" type="date" class="input-element"></input>
                <span asp-validation-for="@Model.StartingDate" class="input-validation"></span>
            </div>
            <div class="form-element">
                <label class="input-label" asp-for="@Model.PaymentOption">Budget type</label>
                <select asp-for="@Model.PaymentOption" class="dropdown-element">
                    <option disabled selected>Select Payment Option</option>
                    <option>Weekly</option>
                    <option>Monthly</option>
                    <option>yearly</option>
                </select>
                <span asp-validation-for="@Model.PaymentOption" class="input-validation"></span>
            </div>
            <div class="button">
                <div class="submit-button">
                    <button asp-action="Edit" asp-controller="LoanAndDebt" type="submit">Update</button>
                </div>
            </div>
        </div>
    </form>
    
</div>
</body>
</html>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
