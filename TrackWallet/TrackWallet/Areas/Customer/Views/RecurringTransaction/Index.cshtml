@model RecurringTransactionIndexVM


<div class="MainBoard">
    <h3>Recurring Transaction</h3>

    <div class="displaySpace">
        <hr/>
        <div class="MainCat">
            @foreach (var obj in Model.RecurringTransactions)
            {
                <div class="elements">
                    <p>@obj.Name</p>
                    <p>@obj.Wallet.Name</p>
                    @foreach (var ele in Model.Category)
                    {
                        if (obj.UserSelectedCategory.CategoryId == ele.Id)
                        {
                            <p>@ele.Name</p>
                        }
                    }
                    <p>Next transaction date: @obj.nextDate.ToShortDateString()</p>
                    <p>@obj.Amount ETB</p>
                    <div class="modify-link">
                        <a asp-controller="RecurringTransaction" asp-action="Edit" asp-route-id="@obj.Id">
                            <img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/>
                            <a asp-controller="RecurringTransaction" asp-route-id="@obj.Id" asp-action="Delete" class="delete">
                                <img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Delete.png")"/>
                            </a>
                        </a>
                    </div>
                </div>
            }
            
        </div>

                <a asp-controller="RecurringTransaction" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
    
</div>

