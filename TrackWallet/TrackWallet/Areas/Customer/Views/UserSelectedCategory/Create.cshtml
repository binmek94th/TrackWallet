@model UserSelectedCategoriesVM


<!DOCTYPE html>

<html>
<head>
    <title>Create</title>
    <style>
        .button {
            display: flex;
            justify-content: flex-end;
            margin-right: -150px;
            margin-top: 50px;
        }
        h3 {
            margin-bottom: 25px;
            font-size: 22px;
            font-weight: normal;
            color: #343a40; /* Dark gray color for the heading */
        }
        
        .submit-button button {
            background-color: #8cd35d; /* Green color for the submit button */
            color: #fff; /* White text color for the button */
            padding: 10px 20px;
            margin-top: 40px;
            font-size: 18px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
        }
            
            .Back-arrow {
                width: 30px;
                height: 40px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50%;
            }
            .Back-arrow a {
                text-decoration: none;
                color: #007bff; /* Blue color for the link */
                font-size: 18px;
                margin-bottom: 20px;
                display: block;
            }
            .submit-button button:hover {
                background-color: #a2d780; /* Gray background color on button hover */
            } 
            .form{
                margin-left: 50px;
            }
            .form {
                margin-top: 10px;
                width: 300px;
            }
    
            .form-element {
                margin-bottom: 15px;
            }
    
            .input-label {
                display: block;
                font-size: 16px;
                color: #495057; /* Dark gray color for the label */
                padding-bottom: 7px;
            }
    
            .input-element, .dropdown-element, .input-image {
                width: 150%;
                padding: 10px;
                box-sizing: border-box;
                margin-top: 5px;
                border: 1px solid #ced4da; /* Light gray border for input elements */
                border-radius: 5px;
                font-size: 16px;
            }
    
            .input-validation {
                color: #dc3545; /* Red color for validation messages */
                font-size: 14px;
                margin-top: 5px;
            }
           .Bcontainer {
                background-color: #9FE870;
                width: 300px;
                height: 45px;
                border-radius: 15px;
                display: flex;
                margin-left: 250px;
                margin-bottom: 20px;
                align-items: center;
                text-align: center;
            }
            .IE {
                width: 130px;
                height: 35px;
                margin-left: 13px;
                background-color: #9FE870;
                border: none;
                border-radius: 10px;
                text-align: center;
                font-size: 18px;
        
            }
            button:active {
                background-color: #B9EE97;
            }
        
            /* Change color when the button is focused (tabbed into) */
            button:focus {
                outline: none;
                background-color: #B9EE97;
            }
            button:hover{
               background-color: #B9EE97;
            }
            
        </style>
</head>
<body>
<div>
<h3>Create Category</h3>
<div class="Back-arrow">
    <a asp-action="Index" asp-controller="UserSelectedCategory"><img width="30px" src="@Url.Content("~/Image/Icons/Back.png")"/> </a>
</div>
<div class="form">
    <form method="post">
        <input asp-for="@Model.UserSelectedCategory.Id" hidden/>
        <input asp-for="@Model.UserSelectedCategory.IsActive" hidden/>
        <div class="form-element">
            <label class="input-label" asp-for="@Model.UserSelectedCategory.CategoryId">Category</label>
            <select asp-for="@Model.UserSelectedCategory.CategoryId" class="dropdown-element" asp-items="@Model.CategoryList">
                <option disabled selected>Select Category</option>
            </select>
            <span asp-validation-for="@Model.UserSelectedCategory.CategoryId" class="input-validation"></span>
        </div>
        <div class="button">
            <div class="submit-button">
                <button type="submit" asp-action="Create" asp-controller="UserSelectedCategory">Save</button>
            </div>
        </div>
    </form>
</div>
</div>
</body>
</html>