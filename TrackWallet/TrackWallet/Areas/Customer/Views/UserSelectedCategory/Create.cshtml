@model UserSelectedCategory


<!DOCTYPE html>

<html>
<head>
    <title>Create</title>
    <style>
        .button {
            display: flex;
            justify-content: flex-end;
            margin-right: -150px;
            margin-top: 50px;
        }
        h3 {
            margin-bottom: 25px;
            font-size: 22px;
            font-weight: normal;
            color: #343a40; /* Dark gray color for the heading */
        }
        
        .submit-button button {
            background-color: #8cd35d; /* Green color for the submit button */
            color: #fff; /* White text color for the button */
            padding: 10px 20px;
            margin-top: 40px;
            font-size: 18px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
        }
            
            .Back-arrow {
                width: 30px;
                height: 40px;
            }
            .Back-arrow :hover {
                background-color: #c6dcb4;
                border-radius: 50%;
            }
            .Back-arrow a {
                text-decoration: none;
                color: #007bff; /* Blue color for the link */
                font-size: 18px;
                margin-bottom: 20px;
                display: block;
            }
            .submit-button button:hover {
                background-color: #a2d780; /* Gray background color on button hover */
            } 
            .form{
                margin-left: 50px;
            }
            .form {
                margin-top: 10px;
            }
    
            .form-element {
                margin-bottom: 15px;
            }
    
            .input-label {
                display: block;
                font-size: 16px;
                color: #495057; /* Dark gray color for the label */
                padding-bottom: 7px;
            }
    
            .input-element, .dropdown-element, .input-image {
                width: 150%;
                padding: 10px;
                box-sizing: border-box;
                margin-top: 5px;
                border: 1px solid #ced4da; /* Light gray border for input elements */
                border-radius: 5px;
                font-size: 16px;
            }
    
            .input-validation {
                color: #dc3545; /* Red color for validation messages */
                font-size: 14px;
                margin-top: 5px;
            }
        </style>
</head>
<body>
<div>
<h3>Create Category</h3>
<div class="Back-arrow">
    <a asp-action="Index" asp-controller="UserSelectedCategory"><img width="30px" src="@Url.Content("~/Image/Icons/Back.png")"/> </a>
</div>
<div class="form">
    <form method="post">
        <input asp-for="@Model.Id" hidden/>
        <input asp-for="@Model.IsActive" hidden/>
        <div class="form-element">
        <label class="input-label" asp-for="@Model.CategoryId">Category</label>
            <select asp-for="@Model.CategoryId" class="dropdown-element" asp-items="@ViewData["CategoryList"] as IEnumerable<SelectListItem>">
                 <option disabled selected>Select Category</option>
            </select>
        <span asp-validation-for="@Model.Category.Id" class="input-validation"></span>
        </div>
        <div class="button">
            <div class="submit-button">
                <button type="submit" asp-action="Create" asp-controller="UserSelectedCategory">Save</button>
            </div>
        </div>
    </form>
</div>
</div>
</body>
</html>