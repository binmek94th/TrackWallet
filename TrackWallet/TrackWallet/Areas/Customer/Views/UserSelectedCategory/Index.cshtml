@model List<UserSelectedCategory>


<div class="MainBoard">
    <h3>Category</h3>
    <h4>Active Categories</h4>
    <div class="displaySpace">
        <hr/>
        <div class="Bcontainer">
            <button class="IE" id="incomeButton">Income</button>
            <button class="IE" id="expenseButton">Expenses</button>
        </div>
        <div class="MainCat">
            @foreach (var obj in Model)
            {
                if (obj.IsActive)
                {
                    <div class="category @obj.Category.CategoryType.ToLower()">
                        <div class="elements">
                            <img src="@obj.Category.ImageUrl" width="35px" height="35px"/>
                            <p>@obj.Category.Name</p>
                            <div class="modify-link">
                                <a asp-controller="UserSelectedCategory" asp-action="Edit" asp-route-id="@obj.Id"><img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/></a>
                            </div>
                        </div>
                    </div>
                }
            }
                <h4>Active Categories</h4>
            @foreach (var obj in Model)
            {
                if (!obj.IsActive)
                {
                    <div class="category @obj.Category.CategoryType.ToLower()">
                        <div class="elements">
                            <img src="@obj.Category.ImageUrl" width="35px" height="35px"/>
                            <p>@obj.Category.Name</p>
                            <div class="modify-link">
                                <a asp-controller="UserSelectedCategory" asp-action="Edit" asp-route-id="@obj.Id"><img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/></a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <a asp-controller="UserSelectedCategory" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
</div>

<style>
    .elements img{
        padding: 10px;
        border-radius: 50px;;
    }

    .MainBoard {
        display: flex;
        flex-direction: column;
        margin-top: -15px;
    }
    .modify-link a :hover {
        background-color: #c6dcb4;
        width: 25px;
        height: 25px;
    }
    .delete img:hover {
        background-color: #e34242;
    }
    h3 {
        margin-bottom: 25px;
        font-size: 30px;
        font-weight: normal;
    }

    .displaySpace {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    h4{
        margin-top: 20px;
        padding-left: 10px;
        font-size: 20px;
        font-weight: normal;
    }
    .Bcontainer {
        background-color: #9FE870;
        width: 300px;
        height: 45px;
        border-radius: 15px;
        display: flex;
        margin-left: 300px;
        margin-bottom: 20px;
        align-items: center;
        text-align: center;
    }

    .category {
        margin-left: -100px;
        margin-top: 20px;
        border-radius: 15px;
        font-size: 18px;
        height: 50px;
        width: 330px;
        background-color: #EFF5E9;
    }
    .category img{
        background-color: transparent;
    }
    .category p {
        margin-top: 17px;
        width: 500px;
    }
    .category a {
        font-size: 16px;
        margin-left: -15px; 
        padding-top: 3px;
    }

    .IE {
        width: 130px;
        height: 35px;
        margin-left: 13px;
        background-color: #9FE870;
        border: none;
        border-radius: 10px;
        text-align: center;
        font-size: 18px;

    }
    .add {
        position: fixed;
        bottom: 50px;
        right: 150px;
        width: 50px;
        height: 50px;
        border-radius: 50px;
        background-color: #9fe870;
        text-align: center;
    }
    .add img{
        padding: 13px;
    }

    .elements {
        display: flex;
    }
    .modify-link{
        display: flex;
    }

    button:active {
        background-color: #B9EE97;
    }

    /* Change color when the button is focused (tabbed into) */
    button:focus {
        outline: none;
        background-color: #B9EE97;
    }

    @@media (max-width: 908px) {
        .Bcontainer {
            margin-left: 200px;
        }
        .add {
            right: 50px;
        }

        }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Initially hide all categories
        $(".category.expense").hide();
        var elementWithClass = document.querySelector('.IE');

        // Change the color to red
        elementWithClass.style.backgroundColor = '#B9EE97';
        $(".category.income").show();

        // Show income categories when the "Income" button is clicked
        $("#incomeButton").on("click", function () {
            $(".category.income").show();
            $(".category.expense").hide();
            elementWithClass.style.backgroundColor = '#B9EE97';
        });

        // Show expense categories when the "Expense" button is clicked
        $("#expenseButton").on("click", function () {
            $(".category.income").hide();
            $(".category.expense").show();
            elementWithClass.style.backgroundColor = '#9FE870';
        });
    });
</script>
