@model List<Budget>


<div class="MainBoard">
    <h3>Category</h3>

    <div class="displaySpace">
        <hr/>
        <div class="MainCat">
            @foreach (var obj in Model)
            {
                <div class="content">
                    @if (obj.BudgetType == "Monthly")
                    {
                        <h5>Monthly</h5>
                        <img src="@obj.Category.ImageUrl" width="35px"/>
                        <p>@obj.Category.Name</p>
                        <p>@obj.Amount</p>
                    }
                </div>
            }
            @foreach (var obj in Model)
            {
                <div class="content">
                    @if (obj.BudgetType == "Weekly")
                    {
                        <h5>Monthly</h5>
                        <img src="@obj.Category.ImageUrl" width="35px"/>
                        <p>@obj.Category.Name</p>
                        <p>@obj.Amount</p>
                    }
                </div>
            }
            @foreach (var obj in Model)
            {
                <div class="content">
                    @if (obj.BudgetType == "Daily")
                    {
                        <h5>Monthly</h5>
                        <img src="@obj.Category.ImageUrl" width="35px"/>
                        <p>@obj.Category.Name</p>
                        <p>@obj.Amount</p>
                    }
                </div>
            }
            @foreach (var obj in Model)
                {
                    <div class="content">
                        @if (obj.BudgetType == "yearly")
                        {
                            <h5>Monthly</h5>
                            <img src="@obj.Category.ImageUrl" width="35px"/>
                            <p>@obj.Category.Name</p>
                            <p>@obj.Amount</p>
                        }
                    </div>
                }

        </div>
        <a asp-controller="Budget" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
</div>

<style>
    .elements img{
        padding: 10px;
        border-radius: 50px;;
    }

    .MainBoard {
        display: flex;
        flex-direction: column;
        margin-top: -15px;
    }
    .modify-link a :hover {
        background-color: #c6dcb4;
        width: 25px;
        height: 25px;
    }
    .delete img:hover {
        background-color: #e34242;
    }
    h3 {
        margin-bottom: 25px;
        font-size: 30px;
        font-weight: normal;
    }

    .displaySpace {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    h4{
        margin-top: 20px;
        padding-left: 10px;
        font-size: 20px;
        font-weight: normal;
    }
    .content img{
    border-radius: 50%;
    }

    .category {
        margin-left: -100px;
        margin-top: 20px;
        border-radius: 15px;
        font-size: 18px;
        height: 50px;
        width: 330px;
        background-color: #EFF5E9;
    }
    .category img{
        background-color: transparent;
    }
    .category p {
        margin-top: 17px;
        width: 500px;
    }
    .category a {
        font-size: 16px;
        margin-left: -15px; 
        padding-top: 3px;
    }

    .add {
        position: fixed;
        bottom: 50px;
        right: 150px;
        width: 50px;
        height: 50px;
        border-radius: 50px;
        background-color: #9fe870;
        text-align: center;
    }
    .add img{
        padding: 13px;
    }

    .elements {
        display: flex;
    }
    .modify-link{
        display: flex;
    }

    button:active {
        background-color: #B9EE97;
    }

    /* Change color when the button is focused (tabbed into) */
    button:focus {
        outline: none;
        background-color: #B9EE97;
    }

    @@media (max-width: 908px) {
        .Bcontainer {
            margin-left: 200px;
        }
        .add {
            right: 50px;
        }

        }
</style>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Initially hide all categories
        $(".category.expense").hide();
        var elementWithClass = document.querySelector('.IE');

        // Change the color to red
        elementWithClass.style.backgroundColor = '#B9EE97';
        $(".category.income").show();

        // Show income categories when the "Income" button is clicked
        $("#incomeButton").on("click", function () {
            $(".category.income").show();
            $(".category.expense").hide();
            elementWithClass.style.backgroundColor = '#B9EE97';
        });

        // Show expense categories when the "Expense" button is clicked
        $("#expenseButton").on("click", function () {
            $(".category.income").hide();
            $(".category.expense").show();
            elementWithClass.style.backgroundColor = '#9FE870';
        });
    });
</script>
