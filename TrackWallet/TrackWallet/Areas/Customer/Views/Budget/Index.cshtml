@model BudgetIndexVM


<div class="MainBoard">
    <h3>Budget</h3>

    <div class="displaySpace">
        <hr/>
        <div class="MainCat">
            @foreach (var obj in Model.Budgets)
            {
                <div class="box">
                    <div class="elements">
                        @foreach (var ele in Model.Category)
                        {
                            try
                            {
                                if (obj.UserSelectedCategory.CategoryId == ele.Id)
                                {
                                    <img class="Cat-img" src="@ele.ImageUrl" width="35px"/>
                                    <div class="info">
                                        <p>Name: @ele.Name</p>
                                        <p>Category: @obj.Name</p>
                                    </div>
                                }
                            }
                            catch(NullReferenceException e)
                            {
                                        
                            }
                        }
                        <div class="modify-link">
                            <a asp-controller="Budget" asp-action="Edit" asp-route-id="@obj.Id">
                                <img width="25px" src="@Url.Content("~/Image/Icons/Edit.png")"/>
                                <a asp-controller="Budget" asp-route-id="@obj.Id" asp-action="Delete" class="delete">
                                    <img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Delete.png")"/>
                                </a>
                            </a>
                        </div>
                    </div>
                        <div class="bar">
                            <div class="main-bar">
                                <div class="fill-bar">
                                    @foreach (var tran in Model.Transaction)
                                    {
                                    }
                                    <p></p>
                                </div>
                            </div>
                        </div>
                </div>
                        }
        </div>
                <a asp-controller="Budget" asp-action="Create" class="add"><img id="img_logo" alt="Logo" width="25px" src="@Url.Content("~/Image/Icons/Add.png")"/></a>
    </div>
    
</div>

<style>
    .main-bar{
        margin-left: 15px;
        height: 10px;
        width: 140%;
        background-color: #cbc8c8;
        border-radius: 15px;
    }
    .fill-bar{
        width: 50%;
        background-color: orange;
        height: 10px;
        border-radius: 15px;
    }
    .Cat-img{
         height: 35px;
    }
    .info{
        margin-top: 20px;
    }
    .info p{
        margin-top: -10px;
    }
    .elements img{
        padding: 10px;
        border-radius: 50px;
       
    }

    .MainBoard {
        display: flex;
        flex-direction: column;
        margin-top: -15px;
    }
    .modify-link a :hover {
        background-color: #c6dcb4;
        width: 25px;
        height: 25px;
    }
    .delete img:hover {
        background-color: #e34242;
    }
    h3 {
        margin-bottom: 25px;
        font-size: 30px;
        font-weight: normal;
    }

    .displaySpace {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
    }
    h4{
        margin-top: 20px;
        padding-left: 10px;
        font-size: 20px;
        font-weight: normal;
    }
    .content img{
        border-radius: 50%;
    }

    .category {
        margin-left: -100px;
        margin-top: 20px;
        border-radius: 15px;
        font-size: 18px;
        height: 50px;
        width: 330px;
        background-color: #EFF5E9;
    }
    .category img{
        background-color: transparent;
    }
    .category p {
        margin-top: 17px;
        width: 500px;
    }
    .category a {
        font-size: 16px;
        margin-left: -15px; 
        padding-top: 3px;
    }

    .add {
        position: fixed;
        bottom: 50px;
        right: 150px;
        width: 50px;
        height: 50px;
        border-radius: 50px;
        background-color: #9fe870;
        text-align: center;
    }
    .add img{
        padding: 13px;
    }
    .box{
        margin-bottom: 40px;
    }
    
    .elements {
        display: flex;
        height: 100px;
        width: 150%;
        background-color: #EFF5E9;
        margin-bottom: -40px;
        border-radius: 15px;
    }
   .elements p{
        width: 200px;
    }
    .modify-link{
        display: flex;
    }

    button:active {
        background-color: #B9EE97;
    }

    /* Change color when the button is focused (tabbed into) */
    button:focus {
        outline: none;
        background-color: #B9EE97;
    }
    .modify-link{
        top: 10px;
        position: relative;
        right: -120px;
    }
</style>

