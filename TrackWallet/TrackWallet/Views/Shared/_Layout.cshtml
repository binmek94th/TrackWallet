@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
        }

        .top-bar {
            background-color: white;
            color: black;
            padding: 5px;
            text-align: right;
            height: 50px;
            position: relative;
            margin-left: 100px;
        }

        .top-nav {
            padding-top: 20px;
            padding-right: 150px; 
            display: flex;
            float: right;
        }

        .top-nav a {
            color: black;
            text-decoration: none;
            padding: 0 15px;
            }

        .container {
            display: flex;
        }
        #collapse-hsidebar{
            float: right;
            margin-top: 15px;
        }
        .sidebar {
            width: 300px;
            height: 100vh;
            background-color: white;
            padding: 20px 20px 20px 60px;
            transition: transform 0.3s ease-in-out;
        }
        .HSidebar{
            display: none;
            padding-top: 100px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
            width: 100%;
        }

        .sidebar li {
            margin-bottom: 25px;
            width: 100%;
        }

        .sidebar a {
            text-decoration: none;
            color: #333;
            width: 100%;
        }

        .content {
            flex: 1;
            margin-top: 30px;
            width: 1000px;
        }

        #toggle-sidebar {
            display: none;
            position: absolute;
        }

        /* Media Query for small screens */
        @@media (max-width: 908px) {
            #toggle-sidebar {
                display: block;
                position: absolute;
                left: -80px;
                margin-top: 20px;
            }
            .container {
                height: 1000px;
            }

            .sidebar {
                display: none;
            }
            .footer {
                margin-bottom: -5px;
            }
            .user {
                display: none;
            }
            h3 {
                padding-left: 50px;
            }
            .top-nav {
                padding-right: 30px;
            }
            .dropdown:hover .dropdown-content {
                margin-right: -100px;
            }
        }
        .HSidebar.HSidebar-visible {
            display: block;
            position: fixed;
            top: 0;
            left: 0;
            width: 300px;
            height: 100%;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            transition: left 0.3s ease-in-out;
        }

        .HSidebar ul {
            margin-top: 270px;
            margin-left: 170px;
            transform: translate(-50%, -50%);
            list-style: none;
            width: 100%;
        }


        .HSidebar {
            display: block;
            position: fixed;
            top: 0;
            left: -300px; /* Initially off-screen on the left */
            width: 200px; /* Set the width to be the same as .sidebar */
            height: 100%;
            background-color: #333;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: left 0.5s ease-in-out;
            z-index: 1000;
        }

        .HSidebar ul {
            list-style: none;
            padding: 0;
        }

        .HSidebar li {
            margin-bottom: 25px;
        }

        .HSidebar a {
            text-decoration: none;
            color: black;
        }
        .footer {
            margin-top: auto;
            padding: 20px;
            background-color: #f4f4f4;
            border-top: 1px solid #ccc;
        }
        .profile{
            width: 40px;
            border-radius: 50px;
            height: 40px;
            background-color: #bebbbb;
            margin-top: -25px;
            margin-right: -10px;
        }
        .profile p{
            font-size: 16px;
            text-align: center;
            padding-top: 10px;
        }
        a img{
        margin-right: 15px;
        margin-bottom: -5px;
        }
        .bell {
            margin-top: -15px;
            margin-right: -25px;

        }
        .user {
            margin-right: -15px;
        }
        .dropbtn {
            background-color: white;
            padding: 10px;
            font-size: 16px;
            border: none;
            cursor: pointer;
            width: 30px;
        }
        .dropbtn img{
            margin-top: -50px;
            width: 30px;
        }
                 /* Style the dropdown content (hidden by default) */
        .dropdown-content {
            border-radius: 15px;
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        
        /* Style the dropdown links */
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        
        /* Change color on hover */
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        .dropdown:hover .dropdown-content,
        .dropdown-content:hover {
            display: block;
        }
        .dropdown:hover .dropdown-content {
            top: 100%; 
            right: 100px;;
        }
        .logout-btn {
            background-color: transparent;
            border: none;
            width: 100%;
            cursor: pointer;
            font-size: 16px;
            color: black;
            text-decoration: none;
            color: black;
            text-align: right;
            padding: 12px 16px;
        }
        
        .logout-btn:hover {
            color: #333;
            background-color: #f1f1f1;
        }
        .NavNew {
            list-style: none;
            height: 70px; /* Adjust the height as needed */
        }
        
        .NavNew a{
            padding: 10px;
            margin-right: 20px;
        }
        
        .navLogin:hover {
            background-color: #BBDCA7FF;
            border-radius: 15px;
            height: 70px; /* Adjust the height as needed */
        }
        
        .navRegister:hover {
            background-color: #bbdca7;
            border-radius: 15px;
            height: 70px; /* Adjust the height as needed */
        }

        .Main-container {
            display: flex;
        }

    </style>
</head>
<body>
<div class="top-bar">
    <button id="toggle-sidebar" onclick="toggleSidebar()">☰</button>
    <div class="top-nav">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="#"><img class="bell" src="@Url.Content("~/Image/Icons/Bell.png")" width="50px" /></a>
                
                <a href="#">
                    <div class="profile">
                        <p>BM</p>
                    </div>
                </a>

                <a class="user" href="#">Binyam Mekonnen</a>
                <div class="dropdown">
                    <button class="dropbtn"><img src="@Url.Content("~/Image/Icons/Arrow.png")" alt="Arrow"></button>
                    <div class="dropdown-content">
                    <a id="manage" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="logout-btn">Logout</button>
                        </form>
                        
                    </div>
                    </div>
            }
            else
            {
                <li class="NavNew">
                    <a class="navRegister " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li class="NavNew">
                    <a class="navLogin " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }
                
    </div>
</div>
<div class="Main-container">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="sidebar" id="sidebar">
                    <ul>
                        <li><a a asp-action="Index" asp-controller="Home" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Home.png")" width="30px" />Home</a></li>
                        <li><a href="#"><img src="@Url.Content("~/Image/Icons/Insights.png")" width="30px" />Insights</a></li>
                        <li><a asp-action="Index" asp-controller="UserSelectedCategory" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Category.png")" width="30px" />Category</a></li>
                        <li><a asp-action="Index" asp-controller="Budget" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Budget.png")" width="30px" />Budget</a></li>
                        <li><a asp-action="Index" asp-controller="RecurringTransaction"><img src="@Url.Content("~/Image/Icons/Recurring Payments.png")" width="30px" />Recurring Transaction</a></li>
                        <li><a href="#"><img src="@Url.Content("~/Image/Icons/Loan and Debt.png")" width="30px" />Loan & Debt</a></li>
                        <li><a asp-action="Index" asp-controller="Goal"><img src="@Url.Content("~/Image/Icons/Goal.png")" width="30px" />Goal</a></li>
                        <li><a asp-action="Index" asp-controller="Occasion" ><img src="@Url.Content("~/Image/Icons/Occasion.png")" width="30px" />Occasion</a></li>
                    </ul>
                </div>
                <div class="HSidebar">
                    <button id="collapse-hsidebar" onclick="collapseHSidebar()"> ☰</button>
                    <ul>
                        <li><a a asp-action="Index" asp-controller="Home" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Home.png")" width="30px" />Home</a></li>
                        <li><a href="#"><img src="@Url.Content("~/Image/Icons/Insights.png")" width="30px" />Insights</a></li>
                        <li><a asp-action="Index" asp-controller="UserSelectedCategory" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Category.png")" width="30px" />Category</a></li>
                        <li><a asp-action="Index" asp-controller="Budget" asp-area="Customer"><img src="@Url.Content("~/Image/Icons/Budget.png")" width="30px" />Budget</a></li>
                        <li><a asp-action="Index" asp-controller="RecurringTransaction"><img src="@Url.Content("~/Image/Icons/Recurring Payments.png")" width="30px" />Recurring Transaction</a></li>
                        <li><a href="#"><img src="@Url.Content("~/Image/Icons/Loan and Debt.png")" width="30px" />Loan & Debt</a></li>
                        <li><a asp-action="Index" asp-controller="Goal"><img src="@Url.Content("~/Image/Icons/Goal.png")" width="30px" />Goal</a></li>
                        <li><a asp-action="Index" asp-controller="Occasion" ><img src="@Url.Content("~/Image/Icons/Occasion.png")" width="30px" />Occasion</a></li>
                    </ul>
                </div>
            }
        </div>
        <div class="Content-container">
            <div class="overlay"></div>
            <div class="content">
                <div class="container bodyContainer">
                    <main role="main">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>

</div>
<!-- Footer -->
<footer class="border-top footer text-muted">

    &copy; 2023 - TrackWallet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

</footer>
<!-- Scripts -->
<script>
    function toggleSidebar() {
        var hiddenSidebar = document.querySelector(".HSidebar");


        // Toggle the visibility of the hidden sidebar
        hiddenSidebar.classList.toggle("HSidebar-visible");
    }

    function collapseHSidebar() {
        var hiddenSidebar = document.querySelector(".HSidebar");

        // Hide the hidden sidebar
        hiddenSidebar.classList.remove("HSidebar-visible");
    }

</script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.tiny.cloud/1/yqf8pl0fr00reb7419cy8a30rw2hop33mzhoqxk1kx1mcm2c/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
